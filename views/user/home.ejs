
<%-include("../../views/partials/user/header")%>
<section>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://dcbookstore.com/uploads/homeslider/images/87444459290355-Web-Banner-valentines-copy.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="..." alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="..." alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>

  <section id="new-arrival" class="new-arrival product-carousel py-5 position-relative overflow-hidden">
    <div class="container">
      <div class="d-flex flex-wrap justify-content-between align-items-center mt-5 mb-3">
        <h4 class="text-uppercase">Our New Arrivals</h4>
        <a href="/shop?filter=newArrivals" class="btn-link">View All Products</a>
      </div>
      <div class="swiper product-swiper open-up" data-aos="zoom-out">
        <div class="swiper-wrapper d-flex">
          <% for(let i = 0; i < 4 && i < newArrivals.length; i++) { %>
          <div class="swiper-slide">
            <div class="product-item image-zoom-effect link-effect">
              <div class="image-holder position-relative">
              
                <a href="/book/<%= newArrivals[i]._id %>">
                 
                 <img src="<%= newArrivals[i].book_images[0] %>" alt="<%= newArrivals[i].title %>" class="product-image img-fluid">
                </a>
                <a href="/wishlist/<%= newArrivals[i]._id %>" class="btn-icon btn-wishlist">                 
                  <svg width="24" height="24" viewBox="0 0 24 24">
                    <use xlink:href="#heart"></use>
                  </svg>
                </a>
                <div class="product-content">
                  <h5 class="element-title text-uppercase fs-5 mt-3">                   
                    <a href="/book/<%= newArrivals[i]._id %>"><%= newArrivals[i].title %></a>
                  </h5>                 
                 <a href="/cart/add/<%= newArrivals[i]._id %>" class="text-decoration-none" data-after="Add to cart">
                  <span>Rs<%= newArrivals[i].price %></span>
              </a>
               </div>
              </div>
            </div>
          </div>
          <% } %>           
        </div>
      <div class="swiper product-swiper open-up" data-aos="zoom-out">
        <div class="swiper-wrapper d-flex">
          <% for(let i = 4; i < 8 && i < bestSellers.length; i++) { %>
          <div class="swiper-slide">
            <div class="product-item image-zoom-effect link-effect">
              <div class="image-holder position-relative">

                <a href="/book/<%= newArrivals[i]._id %>">
                 
                  <img src="<%= newArrivals[i].book_images[0] %>" alt="<%= newArrivals[i].title %>" class="product-image img-fluid">
 
 
                 </a>
               
                 <a href="/wishlist/<%= newArrivals[i]._id %>" class="btn-icon btn-wishlist">
                  <svg width="24" height="24" viewBox="0 0 24 24">
                    <use xlink:href="#heart"></use>
                  </svg>
                </a>
                <div class="product-content">
                  <h5 class="element-title text-uppercase fs-5 mt-3">
                    <a href="/book/<%= newArrivals[i]._id %>"><%= newArrivals[i].title %></a>
                  </h5>
                  <a href="/cart/add/<%= newArrivals[i]._id %>" class="text-decoration-none" data-after="Add to cart">
                    <span>Rs<%= newArrivals[i].price %></span>
                </a>
                </div>
              </div>
            </div>
          </div>
          <% } %>
          
         
          
          
        </div>
        <div class="swiper-pagination"></div>
      </div>
      <div class="icon-arrow icon-arrow-left"><svg width="50" height="50" viewBox="0 0 24 24">
          <use xlink:href="#arrow-left"></use>
        </svg></div>
      <div class="icon-arrow icon-arrow-right"><svg width="50" height="50" viewBox="0 0 24 24">
          <use xlink:href="#arrow-right"></use>
        </svg></div>
    </div>
    </div>
  </section>


