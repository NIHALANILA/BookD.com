<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .card {
            background: var(--bs-light);
            border-radius: 8px;
            padding: 20px;
        }
        .form-control {
            border-radius: 0;
            border-color: var(--bs-gray-dark);
        }
        .form-label {
            font-weight: 500;
            color: var(--bs-black);
        }
        .btn-primary {
            background-color: var(--bs-primary);
            border: none;
        }
        .btn-primary:hover {
            background-color: var(--bs-black);
        }
        .error-message {
            color: red; 
            font-size: 14px;
            display: none;
        }
        #resendOtp {
            cursor: not-allowed;
            opacity: 0.6;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-3">Login</h2>
                <% if (message) { %>
                    <div class="alert alert-warning text-center">
                        <%= message %>
                    </div>
                <% } %>
                <div class="card p-4 shadow-lg">
                    <h3 class="text-center mb-3">Verify OTP</h3>

                    <div id="otpMessage" class="alert d-none"></div> 

                    <form id="verifyOtpForm" method="post" action="/verify-otp">
                        <label class="form-label">Enter OTP</label>
                        <input type="text" name="otp" id="otpInput" class="form-control mb-3" placeholder="Enter OTP" required>
                        <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
                        <input type="hidden" id="otpExpireTime" value="<%= otpExpires %>">
                    </form>

                   
                    <p class="text-center mt-3">
                        Didn't receive the OTP? 
                        <button id="resendOtp" class="btn btn-link"  disabled>
                            Resend OTP (<span id="timer">60</span>s)
                        </button>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
   document.addEventListener("DOMContentLoaded", function () {
    let otpExpireTimeEl = document.getElementById("otpExpireTime");
    let otpExpireTime = otpExpireTimeEl ? parseInt(otpExpireTimeEl.value, 10) : NaN;

    if (isNaN(otpExpireTime) || otpExpireTime < Date.now()) {
       
        otpExpireTime = Date.now() + 60000; 
    }
    

    const timerElement = document.getElementById("timer");
    const resendBtn = document.getElementById("resendOtp");

    if (!resendBtn) {
        
        return;
    }

    let countdown;

    function startTimer() {
        function updateTimer() {
            let timeRemaining = Math.max(0, Math.floor((otpExpireTime - Date.now()) / 1000));
            timerElement.textContent = timeRemaining;

            if (timeRemaining <= 0) {
                clearInterval(countdown);
                resendBtn.removeAttribute("disabled");
                resendBtn.style.pointerEvents = "auto"; 
                resendBtn.style.cursor = "pointer"; 
               
            }
        }

        updateTimer();
        countdown = setInterval(updateTimer, 1000);
    }

    startTimer();

    async function resendOTP(event) {
        event.preventDefault();
        

        try {
            const response = await fetch("/resend-otp", { method: "POST" });
           
            const data = await response.json();
            
            if (data.success) {
                otpExpireTime = Date.now() + 60000; 
                resendBtn.setAttribute("disabled", "true"); 
                resendBtn.style.pointerEvents = "none"; 
                startTimer(); 
            } 
        } catch (error) {
            console.error(" Error in fetch:", error);
        }
    }

    resendBtn.addEventListener("click", resendOTP);
});

    </script>
    
</body>
</html>
