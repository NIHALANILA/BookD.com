<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
   


        .btn.success {
        background-color: #28a745;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        float:right;
        margin-bottom: 15px;
    }

    .btn.success:hover {
        background-color: #218838;
    }
    </style>
        

    
<%-include("../../views/partials/admin/header")%>
<!-- Book Management Section -->

    <h2>User Management</h2>
                 <!-- Search Form -->
    <form class="user-search-form"   action="/admin/books" method="GET">
        <input type="text" name="search" value="<%= search %>" placeholder="Search users">
        <button type="submit">Search</button>
        <% if (search) { %>
            <a href="/admin/books"><button type="button">Reset</button></a>

        <% } %>
        <% if (message) { %>
            <p class="alert alert-warning"><%= message %></p>
        <% } %>
        
    </form>

    <a href="/admin/books/add" class="btn success">Add books</a>

    <div class="table-responsive-wrapper">
    

    <table class="book-table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% books.forEach((book, index) => { %>
                        <tr>
                            <td><%= (currentPage - 1) * 5 + index + 1 %></td>
                            <td><%= book.title %></td>
                            <td><%= book.author %></td>
                            <td><%= book.price %></td>                            
                            <td>
                                <% if (book.category_ids && book.category_ids.length > 0) { %>
                                    <%= book.category_ids.map(category => category.name).join(", ") %>
                                <% } else { %>
                                    No Category
                                <% } %>
                            </td>
                            <td><%= book.stock %></td>
                            
                                <td>
                                    <div class="action-buttons">
                                    
                                       <button class="delete-btn" type="button" onclick="softDelete('<%= book._id %>')">Delete</button>
                                       
                                       
                                        <a href="/admin/books/edit/<%= book._id %>" class="edit-btn" style="text-decoration: none;" >Edit</a>

                                        <button class="btn btn-primary" onclick="toggleBook('<%= book._id %>')">
                                            <%= book.isListed ? "Unlist" : "list" %>
                                        </button>
                                    </div>
                                    
                                </td>                                                            
                        </tr>
    
                        <% }); %>
                    </tbody>
                </table>
            </div>

     <!-- Pagination Controls -->
    <div class="pagination-container">
        <% for(let i = 1; i <= totalPages; i++) { %>
            <a href="/admin/books?page=<%= i %>&search=<%= search %>">
                <button <%= currentPage === i ? 'disabled' : '' %>><%= i %></button>
            </a>
        <% } %>
    </div>
    
 
    

</main>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function softDelete(bookId) {
    Swal.fire({
        title: "Are you sure?",
        text: "Do you want to delete this book?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, delete it!",
        cancelButtonText: "Cancel"
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/books/${bookId}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json"
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire("Deleted!", data.message, "success").then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire("Error!", "Error deleting book", "error");
                }
            })
            .catch(error => console.error("Error:", error));
        }
    });
}

function toggleBook(bookId) {
    Swal.fire({
        title: "Are you sure?",
        text: "Do you want to unlist this book?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, unlist it!",
        cancelButtonText: "Cancel"
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/books/${bookId}`, {
                method: "PATCH",
                headers: {
                    "Content-Type": "application/json"
                }
            })
            .then(response => response.json()) 
            .then(data => {
                if (data.success) {
                    Swal.fire("Success!", data.message, "success").then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire("Error!", "Error unlisting the book", "error");
                }
            })
            .catch(error => console.error("Error:", error)); 
        }
    });
}
  

</script>


</body>
</html>

